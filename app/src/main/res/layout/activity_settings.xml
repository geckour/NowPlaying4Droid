<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="summary_pattern"
            type="String" />

        <variable
            name="summary_choose_color"
            type="String" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="3dp"
            android:titleTextColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:title="ツールバータイトル"/>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/category_general"
                    layout="@layout/item_pref_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="@{@string/pref_category_general}"/>

                <include
                    android:id="@+id/item_pattern_format"
                    layout="@layout/item_pref_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:desc="@{@string/pref_desc_pattern}"
                    app:summary="@{summary_pattern}"
                    app:title="@{@string/pref_title_pattern}"/>

                <include
                    android:id="@+id/item_choose_color"
                    layout="@layout/item_pref_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:desc="@{@string/pref_desc_choose_color}"
                    app:summary="@{summary_choose_color}"
                    app:title="@{@string/pref_title_choose_color}"/>

            </LinearLayout>
        </ScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:tint="@android:color/white"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_notification"/>

    </android.support.constraint.ConstraintLayout>
</layout>